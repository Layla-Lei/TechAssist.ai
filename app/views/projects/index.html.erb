<div class="content">
  <h2>Projects</h2>
  <% if @projects.count > 0 %>
    <div class="d-grid mt-4 gap-3">
      <div class="row row-cols-2 mb-3" style="height: 200px">
        <% @projects.each do |project| %>
          <div class="col-sm-4 mb-2">
            <div class="card" style="height: 100%">
              <div class="card-body">
                <h5 class="card-title"><%= project.name%></h5>
                <p class="card-text"><%= project.description%></p>
              </div>
              <div class="card-footer">
                <div class="row row-cols-2">
                  <div class="col pl-0 pr-1">
                    <%= link_to 'Details', project_path(project.id), :class => 'btn btn-primary btn-block'%>
                  </div>
                  <div class="col pr-0 pl-1">
                    <%= link_to 'Website', projects_path, :class => 'btn btn-primary btn-block'%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <h4>Sorry. There is no project fits your selection.</h4>
    <%= link_to 'Back to project selection', newprojects_path, :class => 'btn btn-primary' %>
  <% end %>
</div>

