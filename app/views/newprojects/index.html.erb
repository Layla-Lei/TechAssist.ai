
<%# app/views/newprojects/index.html.erb %>
<br>
<br>
<br>
<div class = 'col-6' style = "margin:0 auto;">
  <%= form_tag('/newprojects', method: :post) do %>
    <h2>Find a Project You'd Like to Build</h2>
    <div class="form-group mb-3">
      <label for="language" class="form-label">Programming Language</label>
      <select id="language" name="language" class="form-select">
        <option value="java">Java</option>
        <option value="python">Python</option>
        <option value="ruby">Ruby</option>
        <option value="javascript">JavaScript</option>
        <!-- Add other languages as needed -->
      </select>
    </div>

    <div class="form-group mb-3">
      <label for="tech_area" class="form-label">Tech Area</label>
      <select id="tech_area" name="tech_area" class="form-select">
        <option value="frontend">Frontend</option>
        <option value="backend">Backend</option>
        <option value="machine-learning">Machine Learning</option>
        <option value="system">System</option>
        <option value="data-science">Data Science</option>
      </select>
    </div>

    <div class="form-group mb-3">
      <label for="tech_stack" class="form-label">Tech Stack/Framework</label>
      <select id="tech_stack" name="tech_stack" class="form-select">
        <option value="react">React</option>
        <option value="angular">Angular</option>
        <option value="fastapi">FastAPI</option>
        <option value="HTML/CSS">HTML/CSS</option>
        <option value="spring">Spring</option>
        <option value="rails">Rails</option>
        <option value="pandas">Pandas</option>
        <!-- Add other frameworks as needed -->
      </select>
    </div>

    <div class="form-group mb-3">
      <label for="skill_level" class="form-label">Level of Skill</label>
      <select id="skill_level" name="skill_level" class="form-select">
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="advanced">Advanced</option>
      </select>
    </div>

    <div class="form-group mb-3">
      <label for="project_scale" class="form-label">Project Scale (Estimated Hours)</label>
      <select id="project_scale" name="project_scale" class="form-select">
        <option value="10">10 hours</option>
        <option value="20">20 hours</option>
        <!-- Add other scales as needed -->
      </select>
    </div>

    <%= submit_tag 'Find Project', class: 'btn btn-primary' %>
  <% end %>
</div>


