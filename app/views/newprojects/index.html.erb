<h2>Find a Project You'd Like to Build</h2>
<%# app/views/newprojects/index.html.erb %>



<%= form_tag('/path_where_form_submits', method: :post) do %>
  <div class="form-group">
    <label for="language">Programming Language</label>
    <select id="language" name="language">
      <option value="java">Java</option>
      <option value="python">Python</option>
      <option value="ruby">Ruby</option>
      <!-- Add other languages as needed -->
    </select>
  </div>

  <div class="form-group">
    <label for="tech_area">Tech Area</label>
    <select id="tech_area" name="tech_area">
      <option value="frontend">Frontend</option>
      <option value="backend">Backend</option>
      <option value="full-stack">Full-Stack</option>
      <option value="system">System</option>
      <option value="data-science">Data Science</option>
    </select>
  </div>

  <div class="form-group">
    <label for="tech_stack">Tech Stack/Framework</label>
    <select id="tech_stack" name="tech_stack">
      <option value="react">React</option>
      <option value="angular">Angular</option>
      <option value="vue">Vue</option>
      <option value="spring">Spring</option>
      <!-- Add other frameworks as needed -->
    </select>
  </div>

  <div class="form-group">
    <label for="skill_level">Level of Skill</label>
    <select id="skill_level" name="skill_level">
      <option value="beginner">Beginner</option>
      <option value="intermediate">Intermediate</option>
      <option value="advanced">Advanced</option>
    </select>
  </div>

  <div class="form-group">
    <label for="project_scale">Project Scale (Estimated Hours)</label>
    <select id="project_scale" name="project_scale">
      <option value="10">10 hours</option>
      <option value="20">20 hours</option>
      <!-- Add other scales as needed -->
    </select>
  </div>

  <%= link_to 'Find Project', projects_path, :class => 'btn btn-primary btn-block'%>
<% end %>


